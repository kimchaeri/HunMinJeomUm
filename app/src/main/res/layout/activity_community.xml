<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <TabHost
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/freeboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/write1"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:textStyle="bold"
                        android:layout_margin="20dp"
                        android:text="글쓰기"
                        android:textSize="15dp"
                        android:background="#ffffff"
                        android:layout_gravity="right"
                        android:drawableLeft="@drawable/write"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ListView
                            android:id="@+id/freeboardlist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </ListView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/infoboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/write2"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:textStyle="bold"
                        android:layout_margin="20dp"
                        android:text="글쓰기"
                        android:textSize="15dp"
                        android:background="#ffffff"
                        android:layout_gravity="right"
                        android:drawableLeft="@drawable/write"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ListView
                            android:id="@+id/infoboardlist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </ListView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/suggestboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/write3"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:textStyle="bold"
                        android:layout_margin="20dp"
                        android:text="글쓰기"
                        android:textSize="15dp"
                        android:background="#ffffff"
                        android:layout_gravity="right"
                        android:drawableLeft="@drawable/write"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ListView
                            android:id="@+id/suggetboardlist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </ListView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/reportboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/write4"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:textStyle="bold"
                        android:layout_margin="20dp"
                        android:text="글쓰기"
                        android:textSize="15dp"
                        android:background="#ffffff"
                        android:layout_gravity="right"
                        android:drawableLeft="@drawable/write"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ListView
                            android:id="@+id/reportboardlist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </ListView>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>

